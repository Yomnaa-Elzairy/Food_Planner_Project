<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.foodplannerproject.presentation.signup.view.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.foodplannerproject.presentation.login.view.LogInFragment"
        android:label="LogInFragment" >
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_logInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodplannerproject.presentation.home.view.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/search_fragment" />
        <action
            android:id="@+id/action_homeFragment_to_plannerFragment2"
            app:destination="@id/plannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.example.foodplannerproject.presentation.search.view.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_search_fragment_to_mealDetails"
            app:destination="@id/mealDetails" />
        <action
            android:id="@+id/action_search_fragment_to_plannerFragment2"
            app:destination="@id/plannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetails"
        android:name="com.example.foodplannerproject.presentation.mealDetails.view.MealDetails"
        android:label="MealDetails" >
        <action
            android:id="@+id/action_mealDetails_to_search_fragment"
            app:destination="@id/search_fragment" />
        <argument
            android:name="mealId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/plannerFragment"
        android:name="com.example.foodplannerproject.presentation.planner.view.PlannerFragment"
        android:label="PlannerFragment" >
        <action
            android:id="@+id/action_plannerFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_plannerFragment2_to_search_fragment"
            app:destination="@id/search_fragment" />
    </fragment>
    <fragment
        android:id="@+id/fav_fragment"
        android:name="com.example.foodplannerproject.presentation.favorite.view.FavoriteFragment"
        android:label="FavoriteFragment" >
        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_search_fragment"
            app:destination="@id/search_fragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_plannerFragment"
            app:destination="@id/plannerFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_mealDetails"
            app:destination="@id/mealDetails" />
    </fragment>
</navigation>